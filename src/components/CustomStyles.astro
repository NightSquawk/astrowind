---
import { THEME } from 'astrowind:config';
import '@fontsource-variable/inter';

// Font options (uncomment to use):
// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist

// Clients can override this component by creating src/client/components/CustomStyles.astro

// Build CSS string from theme config
const lightSelectionColor = THEME.selection.light.color ? `color: ${THEME.selection.light.color};` : '';
const darkSelectionColor = THEME.selection.dark.color ? `color: ${THEME.selection.dark.color};` : '';
---

<style is:inline set:html={`
  :root {
    --aw-font-sans: '${THEME.fonts.sans}';
    --aw-font-serif: '${THEME.fonts.serif}';
    --aw-font-heading: '${THEME.fonts.heading}';

    --aw-color-primary: ${THEME.colors.primary};
    --aw-color-secondary: ${THEME.colors.secondary};
    --aw-color-accent: ${THEME.colors.accent};

    --aw-color-text-heading: ${THEME.colors.text.heading};
    --aw-color-text-default: ${THEME.colors.text.default};
    --aw-color-text-muted: ${THEME.colors.text.muted};
    --aw-color-bg-page: ${THEME.colors.background.page};

    --aw-color-bg-page-dark: ${THEME.colors.background.pageDark};
    --aw-color-bg-page-dark-overlay: ${THEME.colors.background.pageDark}90;
    --aw-color-border-card: rgb(255 255 255 / 16%);
    --aw-shadow-card: 0 4px 30px rgba(0, 0, 0, 0.1);

    ::selection {
      background-color: ${THEME.selection.light.background};
      ${lightSelectionColor}
    }
  }

  .dark {
    --aw-font-sans: '${THEME.fonts.sans}';
    --aw-font-serif: '${THEME.fonts.serif}';
    --aw-font-heading: '${THEME.fonts.heading}';

    --aw-color-primary: ${THEME.colors.primary};
    --aw-color-secondary: ${THEME.colors.secondary};
    --aw-color-accent: ${THEME.colors.accent};

    --aw-color-text-heading: ${THEME.colors.textDark?.heading || THEME.colors.text.heading};
    --aw-color-text-default: ${THEME.colors.textDark?.default || THEME.colors.text.default};
    --aw-color-text-muted: ${THEME.colors.textDark?.muted || THEME.colors.text.muted};
    --aw-color-bg-page: ${THEME.colors.background.pageDark};

    ::selection {
      background-color: ${THEME.selection.dark.background};
      ${darkSelectionColor}
    }
  }
`}></style>
